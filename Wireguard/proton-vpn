#Setup Wireguard: login to your ProtonPVN account and get your IP Address there.
/interface wireguard
add listen-port=13567 mtu=1420 name=proton-Wireguard comment="Proton Singapore" private-key="=INSERT-PRIVATE-KEY-HERE (OR AUTO-GENERATED BY MIKROTIK)="

/interface wireguard peers
add allowed-address=0.0.0.0/0,::/0 endpoint-address="INSERT-IP-ADDRESS-HERE" endpoint-port=51820 interface=proton-Wireguard name=proton-sg comment="Singapore IP address"  persistent-keepalive=35s public-key="=INSERT-PUBLIC-KEY-HERE="
#add allowed-address=0.0.0.0/0,::/0 endpoint-address="INSERT-IP-ADDRESS-HERE" endpoint-port=51820 interface=proton-Wireguard name=proton-us comment="US IP address"  persistent-keepalive=35s public-key="=INSERT-PUBLIC-KEY-HERE="

/ip address
add address=10.2.0.2/30 comment=ProtonPVN disabled=no interface=proton-Wireguard network=10.2.0.0

#Create routing table if needed
/routing table
add disabled=no fib name=rtab-protonSG

/ip route
#With routing table
add disabled=no dst-address=0.0.0.0/0 gateway=10.2.0.1 distance=5 scope=30 target-scope=10 routing-table=rtab-protonSG

#Without routing table
#add disabled=no dst-address=0.0.0.0/0 gateway=10.2.0.1 distance=1 scope=30 target-scope=10


#In case have many WG connections
/interface list
add name=WAN-WG

/interface list member
add interface=proton-Wireguard list=WAN-WG comment="ProtonVPN"
#add interface=other-vpn2-Wireguard list=WAN-WG
#add interface=other-vpn3-Wireguard list=WAN-WG

#NAT and MANGLE
/ip firewall nat
add action=masquerade chain=srcnat comment="Wireguard VPN Connection" out-interface-list=WAN-WG

/ip firewall mangle
add action=change-mss chain=forward comment="Reduce MSS for WG" disabled=yes new-mss=1380 out-interface-list=WAN-WG protocol=tcp tcp-flags=syn tcp-mss=1381-65535

